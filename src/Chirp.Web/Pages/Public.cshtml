@page "/"
@using Chirp.Core
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Chirp.Web.Pages.PublicModel
@inject SignInManager<Author> SignInManager   

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox">
            <h3>Send cheep:</h3>
            <form asp-page-handler="SendCheep" method="post">
                <input type="text" asp-for="CheepMessage" required>
                <div class="container">
                    <input type="submit" value="Share">
                    <p>Max 160 characters</p>
                </div>
            </form>

        </div>
    }
</div>

<div>
    <h2> Public Timeline </h2>


    @{
        System.Diagnostics.Debug.Assert(Model.Cheeps != null, "Model.Cheeps != null");
    }
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <strong>
                        <a href="/@cheep.Author">@cheep.Author</a>
                    </strong>

                    <small>
                        &mdash;
                        @cheep.Timestamp
                    </small>
                    <br/>
                    @cheep.Message

                    @{
                        if (SignInManager.IsSignedIn(User) && cheep.Author != User.Identity?.Name)
                        {
                            if (!cheep.Follows)
                            {
                                <form asp-page-handler="Follow" method="post">
                                    <input hidden="hidden" type="text" name="FollowsName" value="@cheep.Author"/>
                                    <button type="submit" asp-page-handler="Follow">Follow</button>
                                </form>
                            }
                            else
                            {
                                <form asp-page-handler="Unfollow" method="post">
                                    <input hidden="hidden" type="text" name="FollowsName" value="@cheep.Author"/>
                                    <button class="smallbutton">Unfollow</button>
                                </form>
                            }
                        }
                    }


                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagination">
        <a href="?page=@(Model.PageNumber > 1 ? Model.PageNumber - 1 : 1)"><</a>
        <h3>@Model.PageNumber</h3>
        <a href="?page=@(Model.PageNumber + 1)">></a>
    </div>
</div>